<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="org.williamwong.spotifystreamer.viewmodels.ItemTrackViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/trackItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/list_item_padding"
        android:onClick="@{vm.onTrackClick}">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/list_item_padding"
            android:layout_marginRight="@dimen/list_item_padding"
            android:contentDescription="@string/description_album_thumbnail"
            android:minHeight="@dimen/thumbnail_height"
            android:minWidth="@dimen/thumbnail_width"
            app:srcFitCenterCrop="@{vm.imageUrl}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@{vm.trackName}"
                tools:text="Track Name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@{vm.albumName}"
                tools:text="Album Name" />

        </LinearLayout>

    </LinearLayout>
</layout>