<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="org.williamwong.spotifystreamer.viewmodels.ArtistViewModel"
            />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activities.MainActivity">

        <EditText
            android:id="@+id/searchArtistEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_search_artist"
            android:imeOptions="actionSearch"
            android:onEditorAction="@{vm.onSearchAction}"
            android:singleLine="true"
            app:addTextChangedListener="@{vm.searchArtistQuery.watcher}"
            app:text="@{vm.searchArtistQuery.value}"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/artistsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchArtistEditText"
            android:divider="@color/background_material_light"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            tools:listitem="list_item_artist"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchArtistEditText"
            android:layout_centerHorizontal="true"
            android:visibility="@{vm.isLoading ? View.VISIBLE : View.GONE}"/>
    </RelativeLayout>
</layout>
